<fieldset>
  <div class="panel panel-primary">
    <div class="panel-heading">Please rate yourself on the following.</div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-7">
        <%= f.text_field :name, :class => "form-control", :placeholder => "Enter a Skill to Rate" %>
        </div>
        <div class="col-md-5">
          <input type="number" class="mock-rating" min="1" max="5" />
       </div>
     </div>
     <%= f.text_field :tag_list, :class => "form-control", :placeholder => "Enter Tags for this Skill (separated by commas),", :disabled => true %>
    </div>
    <div class="panel-footer clearfix">
      <div class="pull-right">
        <%= f.hidden_field :_destroy %>
        <%= link_to "remove", '#', :class => "btn btn-danger #{(enable_destroy ||= false) ? "destroy_fields" : "remove_fields"}" %>
      </div>
    </div>
  </div>
</fieldset>

