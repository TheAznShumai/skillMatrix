<h1>Survey</h1>
<ul id="filterOptions">
  <li class="active"><a href="#" class="all">All</a></li>
  <% @survey_tags.each do |tag| %>
    <li><a href="#" class="<%= tag %>"><%= tag.titleize %></a></li>
  <% end %>
</ul>

<ul class="holder list-inline">
  <% @surveys.each do |survey| %>
        <li class="item col-md-2 text-center" data-id=<%= "#{survey.id}" %> data-type="<%= survey.tag_list.join(' ') %>">
        <%= link_to image_tag(survey.icon(:small)), survey%><br/>
        <%= link_to survey.name,
            new_or_edit_attempt_path(survey, current_user.attempts.where(:survey_id => survey.id)) %>
    </li>
  <% end %>
</ul>

