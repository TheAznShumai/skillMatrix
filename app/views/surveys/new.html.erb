<%= form_for @survey do |f| %>
  <div class="field">
  <%= f.label "Survey Name" %>
  <%= f.text_field :name %>
</div>
<br/>

<%= link_to_add_fields "Add Question", f, :questions %><br/>
<%= link_to_add_fields "Add Skill", f, :rateable_skills %>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>

