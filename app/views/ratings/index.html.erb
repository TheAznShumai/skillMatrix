<h3> Ratings Index </h3>

<div class="table-responsive voffset4">
<table class="table table-curved table-striped table-condensed table-hover" id="ratings">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Title</th>
            <th>Department</th>
            <th>Skill Name</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <% user.ratings.each do |rating| %>
                <tr>
                    <td><%= link_to user.profile.full_name, profile_path(user) %></td>
                    <td><%= link_to user.email, '#', :class => 'mailto', "data-email" => user.email %></td>
                    <td><%= user.profile.title %></td>
                    <td><%= user.profile.department %></td>
                    <td><%= rating.user_skill.skill.name %></td>
                    <td><%= rating.score %></td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>
</div>

