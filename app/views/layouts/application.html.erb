<!DOCTYPE html>
<html>
<head>
<title>SkillMatrix</title>
<%= stylesheet_link_tag    "application", media: "all" %>
<%= javascript_include_tag "application", "rest_in_place" %>
<%= csrf_meta_tags %>
</head>
<%= render "static_pages/login_modal" %>
<%= render "static_pages/sign_up_modal" %>
<body>
<div id="wrap">
  <%= render 'layouts/header' %>
  <% if user_signed_in? %>
    <% if current_user.admin? %>
    <%= render 'layouts/nav_mailer_side_panel' %>
    <%= render 'layouts/nav_side_admin' %>
<% else %>
    <%= render 'layouts/nav_side_default' %>
<% end %>
  <div class="col-xs-12 col-sm-8">
    <%= yield %>
  </div>
<% else %>
    <%= yield %>
<% end %>
</div>
<%= render 'layouts/footer' %>
</body>
</html>
