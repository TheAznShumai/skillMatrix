<!DOCTYPE html>
<html>
<head>
<title>SkillMatrix</title>
<%= stylesheet_link_tag    "application", media: "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid nopadding">
  <%= render 'layouts/header' %>
  <div class="row withFooterMargin nosidemargin">
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <div class="col-md-2"><%= render 'layouts/nav_side_admin' %></div>
        <%= render 'layouts/nav_mailer_side_panel' %>
        <%= render 'static_pages/compose_email_modal' %>
      <% else %>
        <div class="col-md-2"><%= render 'layouts/nav_side_default' %></div>
      <% end %>
      <div class="col-md-8"><%= yield %></div>
    <% else %>
      <div class="col-md-12 nopadding"><%= yield %></div>
      <%= render "static_pages/login_modal" %>
      <%= render "static_pages/sign_up_modal" %>
    <% end %>
  </div>
</div>
  <%= render 'layouts/footer' %>
</body>
</html>

