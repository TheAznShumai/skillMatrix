<div class="row">
  <div class="col-md-7">
    <h5><%= rating.user_skill.skill.name.titleize %></h5>
    <% form_id = "skill_#{rating.user_skill_id}_rating" %>
    <%= form_for rating, :html => {:id => form_id, :class => "star_rating_form"} do |f| %>
    <%= f.hidden_field :user_skill_id, :value => rating.user_skill_id %>
    <%= f.hidden_field :score, :id => form_id + "_stars" %>
  <% end %>
  </div>
  <div class="col-md-5">
    <ul class="list-inline pull-right">
      <% (1..5).each do |i| %>
        <li class="rating_star" id="<%= form_id %>_<%= i %>" data-stars="<%= i %>" data-form-id="<%= form_id %>"></li>
    <% end %>
    </ul>
  </div>
</div>

