<h1>Profile Edit</h1>

<%= form_for @profile, :url => profile_path, :role => "form",
  :html => { :multipart => true } do |f| %>

  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :department %>
    <%= f.text_field :department, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :office_phone %>
    <%= f.phone_field :office_phone, :class => "form-control" %>

    <%= f.label :cell_phone %>
    <%= f.phone_field :cell_phone, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.fields_for :user do |user_form| %>
      <%= user_form.label :manager %>
      <%= user_form.collection_select :manager_id, Profile.order(:first_name,
                                      :last_name), :user_id, :full_name,
                                      {:include_blank => true}, :class =>
                                       "profile-chosen-select" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, :class => "form-control" %>
  </div>

  <%= f.submit %>

<% end %>

