<div class="row well background-transparent">
  <div class="panel profile-back">
    <%= image_tag @profile.avatar(:small), class: "profile-pic img-circle" %><br />
    <div id="name"><small><%= @profile.full_name.titleize %><br/><div id="title"><%= @profile.title.titleize %></div></small></div>
    <%= link_to '<i class="fa fa-wrench fa-fw"></i> Edit Profile'.html_safe, edit_profile_path(@profile),
      :class => "btn btn-xs btn-primary pull-right", :id => "edit-profile-button" %>
  </div>
</div>
<div class="row background-transparent">
    <div class="col-md-5">
      <div class="panel panel-info">
        <div class="panel-heading">Profile</div>
        <div class="panel-body">
    <table class="table table-condensed table-curved table-striped table-hover">
      <tbody>
      <tr><td>Email: </td> <td><%= @user.email %></td></tr>
      <tr><td>Office Phone: </td> <td><%= @profile.office_phone %></td></tr>
      <tr><td>Cell Name: </td> <td><%= @profile.cell_phone %></td></tr>
      <tr><td>Department: </td> <td><%= @profile.department %></td></tr>
      </tbody>
    </table>
  </div>
</div>
  </div>
</div>
<div class="row background-transparent">
  <div class="col-md-8">
    <div class="panel panel-info">
      <div class="panel-heading">Surveys Taken</div>
      <div class="panel-body">
        <table class="table table-condensed table-curved table-striped table-hover" id="attempts">
          <thead>
            <tr>
              <th>Survey Name</th>
              <th>Attempted on</th>
            </tr>
          </thead>
          <tbody>
          <% @user.attempts.each do |attempt| %>
            <tr>
              <td><%= attempt.survey.name %></td>
              <td><%= attempt.created_at %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
