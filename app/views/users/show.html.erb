<h1>Users#show</h1>

<table class="table table-hover">
    <tr>
        <th>User ID</th>
        <th>Skill Name</th>
        <th>Score</th>
    </tr>
    <% @user.skills.each do |skill| %>
        <tr>
            <% if skill.rating.score != 0 then %>
            <td><%= @user.email %></td>
            <td><%= skill.name %></td>
            <td><%= skill.rating.score %></td>    
        <% end %>
        </tr>
    <% end %>
</table>

