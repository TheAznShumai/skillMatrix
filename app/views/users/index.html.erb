<h3>Users</h3>
<table class="table table-striped table-curved" id="users">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Title</th>
        <th>Created at</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
          <tr>
          <td><%= link_to user.profile.full_name, profile_path(user) %></td>
          <td><%= link_to user.email, profile_path(user) %></td>
          <td><%= user.profile.title %>
          <td><%= user.created_at %></td>
          <td>
            <%= link_to 'Edit', edit_profile_path(user), :class => 'btn btn-primary' %>
            <%= link_to 'Destroy', user_path(user), :method => :delete,
              :class => 'btn btn-danger',
              :data => {
              :confirm => "Are you sure you want to delete #{user.email}?",
              :title => 'Delete User'} %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

